    {/* Fixed Side Navigation - Original Anchors */}
    {
        prevLink && (
            <a
                href={prevLink}
                class="nav-arrow nav-arrow-prev fixed top-1/2 -translate-y-1/2 z-40"
                aria-label="Capítulo Anterior"
                data-chapter-link="prev"
            >
                <ArrowLeft class="w-5 h-5" />
