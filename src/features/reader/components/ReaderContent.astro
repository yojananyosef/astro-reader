<style>
    .note-selected {
        background-color: color-mix(
            in srgb,
            var(--color-link),
            transparent 85%
        );
        border-left: 4px solid var(--color-link);
        padding: 0.5rem;
        border-radius: 0 4px 4px 0;
        transition: all 0.4s ease-in-out;
    }

    .nav-arrow {
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 300ms ease-in-out,
            visibility 300ms ease-in-out,
            transform 300ms ease-in-out;
        width: 40px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: color-mix(
            in srgb,
            var(--color-text),
            transparent 92%
        ) !important;
        color: var(--color-text);
        z-index: 100; /* Por encima del sidebar y otros elementos */
    }

    .nav-arrow:hover {
        background-color: color-mix(
            in srgb,
            var(--color-text),
            transparent 85%
        ) !important;
    }

    .nav-arrow-prev {
        left: var(--sidebar-current-width, 0px);
        border-radius: 0 40px 40px 0;
        transform: translateX(-5px);
        transition: 
            opacity 300ms ease-in-out,
            visibility 300ms ease-in-out,
            transform 300ms ease-in-out,
            left 0.3s ease-in-out;
    }

    .nav-arrow-next {
        right: 0;
        border-radius: 40px 0 0 40px;
        transform: translateX(5px);
    }

    .nav-arrow.visible {
        opacity: 1;
        visibility: visible;
        transform: translateX(0);
    }

    /* Ajustes para móviles para que no estorben nada */
    @media (max-width: 768px) {
        .nav-arrow {
            height: 60px;
            width: 32px;
            background-color: color-mix(
                in srgb,
                var(--color-text),
                transparent 90%
            ) !important;
            z-index: 100; /* Asegurar que esté por encima de todo en móvil */
        }
        .nav-arrow-prev {
            left: 0 !important;
            border-radius: 0 30px 30px 0;
            transform: none;
        }
        .nav-arrow-next {
            right: 0;
            border-radius: 30px 0 0 30px;
            transform: none;
        }
    }

    @media (min-width: 1200px) {
        .nav-arrow-prev {
            left: calc(var(--sidebar-current-width, 0px) + 1rem);
            border-radius: 50%;
            width: 48px;
            height: 48px;
        }
        .nav-arrow-next {
            right: 1rem;
            border-radius: 50%;
            width: 48px;
            height: 48px;
        }
    }
</style>

<article class="reader-content max-w-3xl mx-auto pb-32 px-4 md:px-0 relative">
    {/* Title - Centered */}
    <div class="mb-8 text-center">
        <h1
            class="text-3xl md:text-4xl font-bold text-[var(--color-link)] mb-2"
        >
            {bookName}
            {currentChapter}
        </h1>
        {
            versesRange && (
                <div class="flex flex-wrap items-center justify-center gap-3 mt-4">
                    <div class="flex items-center gap-2 px-3 py-1.5 rounded-full border border-[var(--color-link)] text-[var(--color-link)] bg-[var(--color-link)]/5">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-info"
                        >
                            <circle cx="12" cy="12" r="10" />
                            <path d="M12 16v-4" />
                            <path d="M12 8h.01" />
                        </svg>
                        <span class="text-sm font-medium">
                            Plan de lectura: versículos {versesRange}
                        </span>
                    </div>
                    <span class="text-sm opacity-60">
                        {highlightedCount} de {verses.length} versículos
                    </span>
                    <button
                        id="toggle-view-mode"
                        class="text-sm px-3 py-1.5 rounded-md border border-theme-text/20 hover:bg-theme-text/5 transition-colors flex items-center gap-2"
                        data-mode="full"
                    >
                        <span id="toggle-text">Ver solo requeridos</span>
                        <svg
                            id="eye-icon"
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-eye-off w-4 h-4"
                        >
                            <path d="M9.88 9.88a3 3 0 1 0 4.24 4.24" />
                            <path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68" />
                            <path d="M6.61 6.61A13.52 13.52 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61" />
                            <line x1="2" x2="22" y1="2" y2="22" />
                        </svg>
                    </button>
                </div>
            )
        }
    </div>

    {
             versesRange && (
                 <div
                     id="reading-legend"
                     class="mb-8 p-4 rounded-xl border border-[var(--color-link)]/30 bg-[var(--color-link)]/5 flex gap-4 items-start animate-fade-in"
                 >
                     <div class="p-2 rounded-lg bg-[var(--color-link)] text-white shrink-0">
                         <svg
                             xmlns="http://www.w3.org/2000/svg"
                             width="20"
                             height="20"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             class="lucide lucide-book-open"
                         >
                             <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
                             <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
                         </svg>
                     </div>
                     <div class="text-left">
                         <h3 class="font-bold text-[var(--color-link)]">
                             Guía de lectura
                         </h3>
                         <p class="text-sm opacity-80 leading-relaxed">
                             Estás siguiendo un plan de lectura. Los versículos
                             resaltados son los asignados para hoy. Puedes cambiar a
                             "Vista Parcial" para enfocarte solo en ellos.
                         </p>
                     </div>
                 </div>
             )
         }

    {/* Fixed Side Navigation - Original Anchors */}
    {
        prevLink && (
            <a
                href={prevLink}
                class="nav-arrow nav-arrow-prev fixed top-1/2 -translate-y-1/2 z-40"
                aria-label="Capítulo Anterior"
                data-chapter-link="prev"
            >
                <ArrowLeft class="w-5 h-5" />
            </a>
        )
    }

    {
        nextLink && (
            <a
                href={nextLink}
                class="nav-arrow nav-arrow-next fixed top-1/2 -translate-y-1/2 z-40"
                aria-label="Capítulo Siguiente"
                data-chapter-link="next"
                data-nav-next
            >
                <ArrowRight class="w-5 h-5" />
            </a>
        )
    }

    <div class="verses space-y-4" id="chapter-content">
        {
            verses.map((verse) => (
                <p
                    class={`relative p-2 -mx-2 rounded transition-all cursor-pointer verse-item ${verse.isHighlighted ? "is-highlighted" : "not-highlighted"}`}
                    style={
                        verse.isHighlighted
                            ? "color: var(--color-text); background-color: color-mix(in srgb, var(--color-link), transparent 92%); border-left: 4px solid var(--color-link);"
                            : "color: var(--color-text);"
                    }
                    data-verse-id={`${bookKey}-${currentChapter}-${verse.number}`}
                    data-is-required={verse.isHighlighted ? "true" : "false"}
                >
                    <sup
                        class={`text-xs font-bold mr-1 ${verse.isHighlighted ? "text-[var(--color-link)] opacity-100" : "opacity-40"}`}
                    >
                        {verse.number}
                    </sup>
                    <span class={verse.isHighlighted ? "font-medium" : ""}>
                        {verse.text}
                    </span>
                    {
                        currentChapterCommentaryVerses.some(
                            (c: any) => c.verse === parseInt(verse.number),
                        ) && (
                            <a
                                href={`/commentary?book=${bookKey}&chapter=${chapterKey}#com-${verse.number}`}
                                class="ml-1 text-[var(--color-link)] opacity-60 hover:opacity-100 transition-opacity inline-flex items-center align-middle"
                                title="Ver comentario"
                            >
                                <Library class="w-3.5 h-3.5" />
                            </a>
                        )
                    }
                    {verse.noteIndices.length > 0 &&
                        verse.noteIndices.map((idx) => (
                            <a
                                href={`#note-${idx}`}
                                class="ml-0.5 text-[var(--color-link)] font-bold cursor-pointer no-underline hover:underline text-xs align-super"
                                aria-label={`Ver nota ${idx}`}
                            >
                                [{idx}]
                            </a>
                        ))}
                </p>
            ))
        }
    </div>

    {
        footnotes.length > 0 && (
            <div class="mt-16 pt-8 border-t border-theme-text/20" id="footnotes">
                <h3
                    class="text-lg font-bold mb-4 flex items-center gap-2"
                    style="color: var(--color-text); opacity: 0.8;"
                >
                    <BookOpen class="w-5 h-5" />
                    Notas del Capítulo
                </h3>
                <ol
                    class="list-none space-y-3 reader-text opacity-80"
                    style="color: var(--color-text);"
                >
                    {footnotes.map((note, idx) => (
                        <li
                            id={`note-${idx + 1}`}
                            class="pl-2 flex gap-2 group p-2 hover:bg-theme-text/5 rounded transition-colors scroll-mt-28"
                        >
                            <span class="font-bold text-[var(--color-link)] shrink-0">
                                [{idx + 1}]
                            </span>
                            <span>{note}</span>
                        </li>
                    ))}
                </ol>
            </div>
        )
    }

    <script>
        import {
            highlights,
            toggleHighlight,
        } from "../../../stores/highlights";
        import { lastBiblePosition } from "../../../stores/navigation";

        let unsubscribe: (() => void) | null = null;

        function initReader() {
            // Guardar posición actual
            const params = new URLSearchParams(window.location.search);
            const book = params.get('book');
            const chapter = params.get('chapter');
            if (book && chapter) {
                lastBiblePosition.set({ lastBook: book, lastChapter: chapter });
            }

            // Subscribe to changes and update UI
            unsubscribe = highlights.subscribe((state) => {
                const verses = document.querySelectorAll("[data-verse-id]");
                verses.forEach((el) => {
                    const id = el.getAttribute("data-verse-id");
                    if (id && state[id]) {
                        el.classList.add("highlighted");
                    } else {
                        el.classList.remove("highlighted");
                    }
                });
            });

            function animateScrollTo(
                target: HTMLElement,
                offset = 112,
                duration = 400,
                done?: () => void,
            ) {
                const start = window.pageYOffset;
                const rect = target.getBoundingClientRect();
                const end = rect.top + start - offset;
                const change = end - start;
                const startTime = performance.now();
                function ease(t: number) {
                    return t < 0.5
                        ? 4 * t * t * t
                        : 1 - Math.pow(-2 * t + 2, 3) / 2;
                }
                function step(now: number) {
                    const elapsed = now - startTime;
                    const progress = Math.min(elapsed / duration, 1);
                    const y = start + change * ease(progress);
                    window.scrollTo(0, y);
                    if (progress < 1) {
                        requestAnimationFrame(step);
                    } else {
                        if (done) done();
                    }
                }
                requestAnimationFrame(step);
            }
            function setSelectedNote(id: string) {
                document.querySelectorAll(".note-selected").forEach((el) => {
                    el.classList.remove("note-selected");
                    el.removeAttribute("aria-current");
                });
                const target = document.getElementById(id);
                if (target) {
                    target.classList.add("note-selected");
                    target.setAttribute("aria-current", "true");
                }
            }
            // Initialize selection from existing hash if present
            if (location.hash && location.hash.length > 1) {
                const id = location.hash.slice(1);
                const target = document.getElementById(id);
                if (target) {
                    setSelectedNote(id);
                }
            }

            function attachListeners() {
                // View Mode Toggle
                const toggleBtn = document.getElementById("toggle-view-mode");
                if (toggleBtn) {
                    toggleBtn.addEventListener("click", () => {
                        const currentMode = toggleBtn.getAttribute("data-mode");
                        const newMode = currentMode === "full" ? "partial" : "full";
                        const text = document.getElementById("toggle-text");
                        const icon = document.getElementById("eye-icon");

                        toggleBtn.setAttribute("data-mode", newMode);

                        if (newMode === "partial") {
                            if (text) text.textContent = "Ver todo";
                            if (icon) {
                                icon.innerHTML =
                                    '<path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/>';
                                icon.classList.remove("lucide-eye-off");
                                icon.classList.add("lucide-eye");
                            }
                            document
                                .querySelectorAll(".not-highlighted")
                                .forEach((el) => {
                                    (el as HTMLElement).style.display = "none";
                                });
                        } else {
                            if (text) text.textContent = "Ver solo requeridos";
                            if (icon) {
                                icon.innerHTML =
                                    '<path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/><path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/><path d="M6.61 6.61A13.52 13.52 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/><line x1="2" x2="22" y1="2" y2="22"/>';
                                icon.classList.remove("lucide-eye");
                                icon.classList.add("lucide-eye-off");
                            }
                            document
                                .querySelectorAll(".not-highlighted")
                                .forEach((el) => {
                                    (el as HTMLElement).style.display = "block";
                                });
                        }
                    });
                }

                // Smooth scroll for footnotes
                document
                    .querySelectorAll('a[href^="#note-"]')
                    .forEach((anchor) => {
                        anchor.addEventListener("click", (e) => {
                            e.preventDefault();
                            const id = anchor.getAttribute("href")?.slice(1);
                            const target = id ? document.getElementById(id) : null;
                            if (target) {
                                animateScrollTo(target);
                                if (id) {
                                    history.pushState(null, "", `#${id}`);
                                    setSelectedNote(id);
                                }
                            }
                        });
                    });

                // Smooth scroll for commentary anchors (if any are local)
                document
                    .querySelectorAll('a[href^="#com-"]')
                    .forEach((anchor) => {
                        anchor.addEventListener("click", (e) => {
                            e.preventDefault();
                            const id = anchor.getAttribute("href")?.slice(1);
                            const target = id ? document.getElementById(id) : null;
                            if (target) {
                                animateScrollTo(target);
                                if (id) {
                                    history.pushState(null, "", `#${id}`);
                                }
                            }
                        });
                    });

                // Verse highlights
                document.querySelectorAll("[data-verse-id]").forEach((el) => {
                    el.addEventListener("click", (e) => {
                        const target = e.target as HTMLElement;
                        if (target.closest("a")) return;

                        const id = el.getAttribute("data-verse-id");
                        if (id) {
                            toggleHighlight(id);
                        }
                    });
                });
            }

            attachListeners();
        }

        // Run on initial load
        initReader();
        // Run after ViewTransitions swap
        document.addEventListener("astro:after-swap", initReader);

        // Keep single selection when hash changes externally
        window.addEventListener("hashchange", () => {
            if (location.hash && location.hash.length > 1) {
                const id = location.hash.slice(1);
                const target = id ? document.getElementById(id) : null;
                if (target) {
                    document.querySelectorAll(".note-selected").forEach((el) => {
                        el.classList.remove("note-selected");
                        el.removeAttribute("aria-current");
                    });
                    target.classList.add("note-selected");
                    target.setAttribute("aria-current", "true");
                }
            }
        });

        // Navigation arrows auto-hide logic
        function initArrows() {
            const arrows = document.querySelectorAll(".nav-arrow");
            if (arrows.length === 0) return;

            let hideTimeout: number;
            let showDelayTimeout: number;

            function showArrows() {
                clearTimeout(hideTimeout);
                clearTimeout(showDelayTimeout);

                // 100ms delay instead of 200ms for better responsiveness
                showDelayTimeout = window.setTimeout(() => {
                    arrows.forEach((arrow) => arrow.classList.add("visible"));

                    // Keep visible for 3s (longer on mobile)
                    const duration = window.innerWidth < 768 ? 4000 : 3000;
                    hideTimeout = window.setTimeout(() => {
                        arrows.forEach((arrow) =>
                            arrow.classList.remove("visible"),
                        );
                    }, duration);
                }, 100);
            }

            // 1. Touch interaction
            document.addEventListener("touchstart", showArrows, { passive: true });

            // 2. Vertical scroll
            let lastScrollY = window.scrollY;
            const handleScroll = () => {
                const currentScrollY = window.scrollY;
                if (Math.abs(currentScrollY - lastScrollY) > 10) {
                    showArrows();
                }
                lastScrollY = currentScrollY;
            };
            window.addEventListener("scroll", handleScroll, { passive: true });

            // 3. Mouse move near edges (Desktop)
            const handleMouseMove = (e: MouseEvent) => {
                const threshold = 100;
                if (e.clientX < threshold || e.clientX > window.innerWidth - threshold) {
                    showArrows();
                }
            };
            document.addEventListener("mousemove", handleMouseMove, { passive: true });

            // Initial show on load
            showArrows();
            
            // Cleanup on swap to avoid double listeners
            document.addEventListener("astro:before-swap", () => {
                document.removeEventListener("touchstart", showArrows);
                window.removeEventListener("scroll", handleScroll);
                document.removeEventListener("mousemove", handleMouseMove);
            }, { once: true });
        }

        initArrows();
        document.addEventListener("astro:after-swap", initArrows);
    </script>
</article>
