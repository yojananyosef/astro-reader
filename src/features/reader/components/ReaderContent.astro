---
import { ArrowLeft, ArrowRight, BookOpen } from "lucide-preact";
import booksIndex from "../../../data/books-index.json";

const url = Astro.url;
const params = url.searchParams;
const getParam = (key: string, fallback: string) => params.get(key) || fallback;
const bookKey = getParam("book", "gen");
const chapterKey = getParam("chapter", "1");

const currentBookEntry = booksIndex.find((b) => b.code === bookKey);

if (!currentBookEntry) {
    return Astro.redirect(`/?book=gen&chapter=1`);
}

const loadBookData = async (code: string) => {
    const books = import.meta.glob("../../../data/books/*.json");
    const loader = books[`../../../data/books/${code}.json`];
    if (!loader) return null;
    const mod = await loader();
    return (mod as any).default ?? mod;
};

const bookData = await loadBookData(bookKey);
if (!bookData) {
    return Astro.redirect(`/?book=gen&chapter=1`);
}

// Navigation Logic
const currentBookIndex = booksIndex.findIndex((b) => b.code === bookKey);
const bookChaptersCount = currentBookEntry.chapters;
const safeParseInt = (s: string) => {
    const n = Number.parseInt(s, 10);
    return Number.isNaN(n) ? null : n;
};
const currentChapNum = safeParseInt(chapterKey);

// Validate chapterKey
if (
    currentChapNum === null ||
    currentChapNum < 1 ||
    currentChapNum > bookChaptersCount
) {
    return Astro.redirect(`/?book=${bookKey}&chapter=1`);
}

let prevLink = null;
let nextLink = null;

// Prev Logic
if (currentChapNum > 1) {
    prevLink = `/?book=${bookKey}&chapter=${currentChapNum - 1}`;
} else if (currentBookIndex > 0) {
    const prevBook = booksIndex[currentBookIndex - 1];
    prevLink = `/?book=${prevBook.code}&chapter=${prevBook.chapters}`;
}

// Next Logic
if (currentChapNum < bookChaptersCount) {
    nextLink = `/?book=${bookKey}&chapter=${currentChapNum + 1}`;
} else if (currentBookIndex < booksIndex.length - 1) {
    const nextBook = booksIndex[currentBookIndex + 1];
    nextLink = `/?book=${nextBook.code}&chapter=1`;
}

const bookName = bookData.nombre;
const chapterData = bookData.capitulo[chapterKey];
const currentChapter = chapterKey;

// Robust Parsing & Footnotes Collection
const footnotes: string[] = [];
let noteCounter = 1;

// Convert verses object to array with mixed format handling
const verses = Object.entries(chapterData)
    .map(([num, content]) => {
        let text = "";
        let verseNotes: number[] = [];

        if (typeof content === "string") {
            text = content;
        } else if (typeof content === "object" && content !== null) {
            text = (content as any).texto || "";
            const notes = (content as any).notas as string[] | undefined;
            if (notes && Array.isArray(notes)) {
                notes.forEach((note) => {
                    footnotes.push(note);
                    verseNotes.push(noteCounter++);
                });
            }
        }

        return {
            number: num,
            text,
            noteIndices: verseNotes,
        };
    })
    .sort((a, b) => parseInt(a.number) - parseInt(b.number));
---

<style>
    .note-selected {
        background-color: color-mix(
            in srgb,
            var(--color-link),
            transparent 85%
        );
        border-left: 4px solid var(--color-link);
        padding: 0.5rem;
        border-radius: 0 4px 4px 0;
        transition: all 0.4s ease-in-out;
    }

    .nav-arrow {
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 300ms ease-in-out,
            visibility 300ms ease-in-out,
            transform 300ms ease-in-out;
        width: 40px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: color-mix(
            in srgb,
            var(--color-text),
            transparent 92%
        ) !important;
        color: var(--color-text);
        z-index: 40;
    }

    .nav-arrow:hover {
        background-color: color-mix(
            in srgb,
            var(--color-text),
            transparent 85%
        ) !important;
    }

    .nav-arrow-prev {
        left: 0;
        border-radius: 0 40px 40px 0;
        transform: translateX(-10px);
    }

    .nav-arrow-next {
        right: 0;
        border-radius: 40px 0 0 40px;
        transform: translateX(10px);
    }

    .nav-arrow.visible {
        opacity: 1;
        visibility: visible;
        transform: translateX(0);
    }

    /* Ajustes para móviles para que no estorben nada */
    @media (max-width: 768px) {
        .nav-arrow {
            height: 60px;
            width: 32px;
            background-color: color-mix(
                in srgb,
                var(--color-text),
                transparent 95%
            ) !important;
        }
    }

    @media (min-width: 1200px) {
        .nav-arrow-prev {
            left: calc(var(--sidebar-offset-left, 0px) + 1rem);
            border-radius: 50%;
            width: 48px;
            height: 48px;
        }
        .nav-arrow-next {
            right: 1rem;
            border-radius: 50%;
            width: 48px;
            height: 48px;
        }
    }
</style>

<article class="reader-content max-w-3xl mx-auto pb-32 px-4 md:px-0 relative">
    {/* Title - Centered */}
    <h1
        class="text-3xl md:text-4xl font-bold text-center text-[var(--color-link)] mt-8 mb-8"
    >
        {bookName}
        {currentChapter}
    </h1>

    {/* Fixed Side Navigation - Original Anchors */}
    {
        prevLink && (
            <a
                href={prevLink}
                class="nav-arrow nav-arrow-prev fixed top-1/2 -translate-y-1/2 z-40"
                aria-label="Capítulo Anterior"
                data-chapter-link="prev"
            >
                <ArrowLeft class="w-5 h-5" />
            </a>
        )
    }

    {
        nextLink && (
            <a
                href={nextLink}
                class="nav-arrow nav-arrow-next fixed top-1/2 -translate-y-1/2 z-40"
                aria-label="Capítulo Siguiente"
                data-chapter-link="next"
                data-nav-next
            >
                <ArrowRight class="w-5 h-5" />
            </a>
        )
    }

    <div class="verses space-y-4" id="chapter-content">
        {
            verses.map((verse) => (
                <p
                    class="relative p-2 -mx-2 rounded transition-colors cursor-pointer"
                    style="color: var(--color-text);"
                    data-verse-id={`${bookKey}-${currentChapter}-${verse.number}`}
                >
                    <sup class="text-xs font-bold mr-1 opacity-60">
                        {verse.number}
                    </sup>
                    {verse.text}
                    {verse.noteIndices.length > 0 &&
                        verse.noteIndices.map((idx) => (
                            <a
                                href={`#note-${idx}`}
                                class="ml-0.5 text-[var(--color-link)] font-bold cursor-pointer no-underline hover:underline text-xs align-super"
                                aria-label={`Ver nota ${idx}`}
                            >
                                [{idx}]
                            </a>
                        ))}
                </p>
            ))
        }
    </div>

    {
        footnotes.length > 0 && (
            <div
                class="mt-16 pt-8 border-t border-theme-text/20"
                id="footnotes"
            >
                <h3
                    class="text-lg font-bold mb-4 flex items-center gap-2"
                    style="color: var(--color-text); opacity: 0.8;"
                >
                    <BookOpen class="w-5 h-5" />
                    Notas del Capítulo
                </h3>
                <ol
                    class="list-none space-y-3 reader-text opacity-80"
                    style="color: var(--color-text);"
                >
                    {footnotes.map((note, idx) => (
                        <li
                            id={`note-${idx + 1}`}
                            class="pl-2 flex gap-2 group p-2 hover:bg-theme-text/5 rounded transition-colors scroll-mt-28"
                        >
                            <span class="font-bold text-[var(--color-link)] shrink-0">
                                [{idx + 1}]
                            </span>
                            <span>{note}</span>
                        </li>
                    ))}
                </ol>
            </div>
        )
    }

    <script>
        import {
            highlights,
            toggleHighlight,
        } from "../../../stores/highlights";

        // Subscribe to changes and update UI
        highlights.subscribe((state) => {
            const verses = document.querySelectorAll("[data-verse-id]");
            verses.forEach((el) => {
                const id = el.getAttribute("data-verse-id");
                if (id && state[id]) {
                    el.classList.add("highlighted");
                } else {
                    el.classList.remove("highlighted");
                }
            });
        });

        function animateScrollTo(
            target: HTMLElement,
            offset = 112,
            duration = 400,
            done?: () => void,
        ) {
            const start = window.pageYOffset;
            const rect = target.getBoundingClientRect();
            const end = rect.top + start - offset;
            const change = end - start;
            const startTime = performance.now();
            function ease(t: number) {
                return t < 0.5
                    ? 4 * t * t * t
                    : 1 - Math.pow(-2 * t + 2, 3) / 2;
            }
            function step(now: number) {
                const elapsed = now - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const y = start + change * ease(progress);
                window.scrollTo(0, y);
                if (progress < 1) {
                    requestAnimationFrame(step);
                } else {
                    if (done) done();
                }
            }
            requestAnimationFrame(step);
        }
        function setSelectedNote(id: string) {
            document.querySelectorAll(".note-selected").forEach((el) => {
                el.classList.remove("note-selected");
                el.removeAttribute("aria-current");
            });
            const target = document.getElementById(id);
            if (target) {
                target.classList.add("note-selected");
                target.setAttribute("aria-current", "true");
            }
        }
        // Initialize selection from existing hash if present
        if (location.hash && location.hash.length > 1) {
            const id = location.hash.slice(1);
            const target = document.getElementById(id);
            if (target) {
                setSelectedNote(id);
            }
        }
        // Keep single selection when hash changes externally
        window.addEventListener("hashchange", () => {
            if (location.hash && location.hash.length > 1) {
                const id = location.hash.slice(1);
                setSelectedNote(id);
            }
        });

        function attachListeners() {
            const verses = document.querySelectorAll("[data-verse-id]");
            verses.forEach((el) => {
                el.addEventListener("click", () => {
                    const id = el.getAttribute("data-verse-id");
                    if (id) toggleHighlight(id);
                });
            });
            document.addEventListener(
                "click",
                (ev: Event) => {
                    const t = ev.target as HTMLElement | null;
                    const a = t
                        ? (t.closest(
                              'a[href^="#note-"]',
                          ) as HTMLAnchorElement | null)
                        : null;
                    if (!a) return;
                    ev.preventDefault();
                    ev.stopPropagation();
                    const href = a.getAttribute("href") || "";
                    const id = href.startsWith("#") ? href.slice(1) : href;
                    const target = id ? document.getElementById(id) : null;
                    if (target) {
                        animateScrollTo(target as HTMLElement, 112, 400, () => {
                            window.history.replaceState(null, "", `#${id}`);
                            setSelectedNote(id);
                            (target as HTMLElement).focus({
                                preventScroll: true,
                            });
                        });
                    }
                },
                { capture: true },
            );
            document.addEventListener(
                "keydown",
                (ev: Event) => {
                    const k = ev as KeyboardEvent;
                    const t = ev.target as HTMLElement | null;
                    const a =
                        t instanceof HTMLAnchorElement &&
                        t.matches('a[href^="#note-"]')
                            ? (t as HTMLAnchorElement)
                            : null;
                    if (!a) return;
                    if (k.key === "Enter" || k.key === " ") {
                        ev.preventDefault();
                        const href = a.getAttribute("href") || "";
                        const id = href.startsWith("#") ? href.slice(1) : href;
                        const target = id ? document.getElementById(id) : null;
                        if (target) {
                            animateScrollTo(
                                target as HTMLElement,
                                112,
                                400,
                                () => {
                                    window.history.replaceState(
                                        null,
                                        "",
                                        `#${id}`,
                                    );
                                    setSelectedNote(id);
                                    (target as HTMLElement).focus({
                                        preventScroll: true,
                                    });
                                },
                            );
                        }
                    }
                },
                { capture: true },
            );
        }
        attachListeners();

        // Client-side chapter navigation with smooth swap
        let navBusy = false;
        const qs = (sel: string) =>
            document.querySelector(sel) as HTMLElement | null;
        const applyFadeOut = () => {
            const content = qs("#chapter-content");
            const foot = qs("#footnotes");
            if (content) {
                content.classList.remove("animate-fade-in");
                content.classList.add("animate-fade-out");
            }
            if (foot) {
                foot.classList.remove("animate-fade-in");
                foot.classList.add("animate-fade-out");
            }
        };
        const applyFadeIn = () => {
            const content = qs("#chapter-content");
            const foot = qs("#footnotes");
            if (content) {
                content.classList.remove("animate-fade-out");
                content.classList.add("animate-fade-in");
            }
            if (foot) {
                foot.classList.remove("animate-fade-out");
                foot.classList.add("animate-fade-in");
            }
        };
        async function swapChapter(url: string) {
            const res = await fetch(url, {
                headers: { "X-Requested-With": "fetch" },
            });
            const html = await res.text();
            const doc = new DOMParser().parseFromString(html, "text/html");
            const newTitle = doc.querySelector("article h1");
            const newContent = doc.querySelector("#chapter-content");
            const newFootnotes = doc.querySelector("#footnotes");
            const newPrev = doc.querySelector("[data-chapter-link='prev']");
            const newNext = doc.querySelector("[data-chapter-link='next']");

            if (newTitle) {
                const currentTitle = document.querySelector("article h1");
                if (currentTitle) currentTitle.innerHTML = newTitle.innerHTML;
            }
            if (newContent) {
                const current = qs("#chapter-content");
                if (current) current.innerHTML = newContent.innerHTML;
            }

            // Handle Footnotes
            const currentF = qs("#footnotes");
            if (newFootnotes) {
                if (currentF) {
                    currentF.innerHTML = newFootnotes.innerHTML;
                } else {
                    const content = qs("#chapter-content");
                    if (content && content.parentNode) {
                        content.parentNode.appendChild(
                            document.importNode(newFootnotes, true),
                        );
                    }
                }
            } else {
                if (currentF) currentF.remove();
            }

            // Handle Navigation Buttons
            const updateNavButton = (
                selector: string,
                newEl: Element | null,
            ) => {
                const currentEl = document.querySelector(selector);
                if (newEl) {
                    if (currentEl) {
                        (currentEl as HTMLAnchorElement).href = (
                            newEl as HTMLAnchorElement
                        ).href;
                    } else {
                        const article =
                            document.querySelector(".reader-content");
                        const content =
                            document.querySelector("#chapter-content");
                        if (article && content) {
                            article.insertBefore(
                                document.importNode(newEl, true),
                                content,
                            );
                        }
                    }
                } else {
                    if (currentEl) currentEl.remove();
                }
            };

            updateNavButton("[data-chapter-link='prev']", newPrev);
            updateNavButton("[data-chapter-link='next']", newNext);

            attachListeners();
            applyFadeIn();
            window.scrollTo({ top: 0, behavior: "instant" as ScrollBehavior });
        }
        async function navigateTo(url: string) {
            if (navBusy) return;
            navBusy = true;
            applyFadeOut();
            setTimeout(async () => {
                await swapChapter(url);
                history.pushState(null, "", url);
                navBusy = false;
            }, 160);
        }
        window.addEventListener("popstate", () => {
            const url = location.pathname + location.search + location.hash;
            swapChapter(url);
        });
        document.addEventListener(
            "click",
            (ev: Event) => {
                const t = ev.target as HTMLElement | null;
                const link = t
                    ? (t.closest(
                          "[data-chapter-link]",
                      ) as HTMLAnchorElement | null)
                    : null;
                if (!link) return;
                ev.preventDefault();
                navigateTo(link.href);
            },
            { capture: true },
        );

        // Navigation arrows auto-hide logic
        const arrows = document.querySelectorAll(".nav-arrow");
        let hideTimeout: number;
        let showDelayTimeout: number;

        function showArrows() {
            clearTimeout(hideTimeout);
            clearTimeout(showDelayTimeout);

            // 200ms delay before showing to avoid accidental triggers
            showDelayTimeout = window.setTimeout(() => {
                arrows.forEach((arrow) => arrow.classList.add("visible"));

                // Keep visible for 2.5s after last interaction
                hideTimeout = window.setTimeout(() => {
                    arrows.forEach((arrow) =>
                        arrow.classList.remove("visible"),
                    );
                }, 2500);
            }, 200);
        }

        // 1. Touch interaction
        document.addEventListener("touchstart", showArrows, { passive: true });

        // 2. Vertical scroll
        let lastScrollY = window.scrollY;
        window.addEventListener(
            "scroll",
            () => {
                const currentScrollY = window.scrollY;
                if (Math.abs(currentScrollY - lastScrollY) > 10) {
                    showArrows();
                }
                lastScrollY = currentScrollY;
            },
            { passive: true },
        );

        // Initial show on load (optional, but helpful for UX)
        showArrows();

        // Cleanup on navigation (handled by Astro)
    </script>
</article>
