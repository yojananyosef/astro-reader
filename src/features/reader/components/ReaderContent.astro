---
import ReaderView from "./ReaderView";
---

<ReaderView client:only="preact" />

<style is:global>
    .note-selected {
        background-color: color-mix(
            in srgb,
            var(--color-link),
            transparent 85%
        );
        border-left: 4px solid var(--color-link);
        padding: 0.5rem;
        border-radius: 0 4px 4px 0;
        transition: all 0.4s ease-in-out;
    }

    .verse-item.is-plan-highlighted {
        background-color: color-mix(
            in srgb,
            var(--color-link),
            transparent 90%
        );
    }

    .verse-item.is-user-highlighted {
        background-color: var(--color-highlight);
    }
</style>
